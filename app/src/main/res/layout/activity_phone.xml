<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorDarkTurquoise"
    tools:context="kg.geektech.taskapprestored.login.PhoneActivity">

    <ImageView
        android:id="@+id/image_auth"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_marginBottom="45dp"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/edit_rounded"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/edit_auth"
        app:layout_constraintLeft_toLeftOf="@+id/ccp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        />
    <Button
        android:id="@+id/submit"
        android:layout_marginBottom="60dp"

        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:onClick="submit"
        android:textColor="@color/colorWhite"
         android:background="@drawable/button_gradient"
        android:text="submit"/>
    <EditText
        android:layout_marginBottom="40dp"
        android:background="@drawable/edit_rounded"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edit_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        />
    <Button
        android:id="@+id/submit_otp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:onClick="submit_otp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_gradient"
        android:text="submit"/>



</androidx.constraintlayout.widget.ConstraintLayout>
